<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.mealkit.order.mapper.OrderMapper">
	<select id="orderSelectList" resultType="co.yedam.mealkit.order.service.OrderVO">
		SELECT * FROM order
	</select>

	<select id="orderSelect" resultType="co.yedam.mealkit.order.service.OrderVO">
		SELECT * FROM order WHERE order_date = #{orderDate} AND order_id = #{orderId}
	</select>
	
	<insert id="orderInsert" parameterType="co.yedam.mealkit.order.service.OrderVO">
		INSERT INTO order
		VALUES (#{orderId},#{orderDate},#{shipCheck},#{memberId},#{addressId})
	</insert>
	
	<update id="orderUpdate" parameterType="co.yedam.mealkit.order.service.OrderVO">
		UPDATE order
		<set>
			<if test="shipCheck != null">ship_check = #{shipCheck},</if>
			<if test="addressId != 0">address_id = #{addressId},</if>
		</set>
		WHERE order_date = #{orderDate} AND order_id = #{orderId}
	</update>
	
	<delete id="orderDelete" parameterType="co.yedam.mealkit.order.service.OrderVO">
		DELETE FROM order WHERE order_date = #{orderDate} AND order_id = #{orderId}
	</delete>

</mapper>